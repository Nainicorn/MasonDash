{{#if main}}
    <div class="pills">
        <table class="courses-table">
            <thead>
                <tr>
                    <th>Finished Courses</th>
                    <th>Current Courses</th>
                    <th>Future Courses</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
{{/if}}

{{#if pill}}
    <tr>
        <td class="courses-section">
            {{#each finishedcourses}}
                <div class="pill">
                    <div class="pill-text">{{this.courseId}}</div>
                </div>
            {{/each}}
        </td>
        <td class="courses-section">
            {{#each courses}}
                <div class="pill">
                    <div class="pill-text">{{this.courseId}}</div>
                </div>
            {{/each}}
        </td>
        <td class="courses-section">
            {{#each futurecourses}}
                <div class="pill">
                    <div class="pill-text">{{this.courseId}}</div>
                </div>
            {{/each}}
        </td>
    </tr>
{{/if}}