{{#if main}}
    <div class="pills">
        <table class="courses-table">
            <thead>
                <tr>
                    <th>Current Courses</th>
                    <th>Finished Courses</th>
                    <th>Future Courses</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="courses-section">
                        {{#each courses}}
                            <div class="pill">
                                <div class="pill-text">{{this}}</div>
                            </div>
                        {{/each}}
                    </td>
                    <td class="courses-section">
                        {{#each finishedcourses}}
                            <div class="pill">
                                <div class="pill-text">{{this.courseName}}</div>
                            </div>
                        {{/each}}
                    </td>
                    <td class="courses-section">
                        {{#each futurecourses}}
                            <div class="pill">
                                <div class="pill-text">{{this.courseName}}</div>
                            </div>
                        {{/each}}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{{/if}}
