{{#if main}}
    <div class="pills"></div>
{{/if}}

{{#if pill}}
    <div class="pill">
        <div class="pill-title">Completed Courses</div>
        <div class="pill-text">
            {{#each finishedcourses}}
                <div>{{this.id}} - {{this.credits}}</div>
            {{/each}}
        </div>
    </div>
    <div class="pill">
        <div class="pill-title">Current Courses</div>
        <div class="pill-text">{{courses}}</div>
    </div>
    <div class="pill">
        <div class="pill-title">Future Courses</div>
        <div class="pill-text">{{futurecourses}}</div>
    </div>
{{/if}}